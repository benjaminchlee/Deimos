{

    "name": "Highlight Marks on Pinch",

    "states": [
        {
            "name": "unhighlighted",
            "mark": "sphere",
            "encoding": {
                "color": null
            }
        },
        {
            "name": "highlighted",
            "restrict": true,
            "encoding": {
                "color": {
                    "value": "red"
                }
            }
        }
    ],

    "signals": [{
            "name": "leftHandSelect",
            "source": "hand",
            "handedness": "left",
            "value": "select"
        }, {
            "name": "leftMouseDown",
            "source": "mouse",
            "handedness": "left",
            "value": "select"
        }
    ],

    "transitions": [
        {
            "name": "highlighting",
            "states": ["unhighlighted", "highlighted"],
            "trigger": "leftHandSelect || leftMouseDown",
            "control": {
                "timing": 0.25,
                "interrupted": "ignore"
            },
            "bidirectional": true
        }
    ]
}