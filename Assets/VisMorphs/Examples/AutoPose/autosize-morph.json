
{
    "states": [
        {
            "name": "unscaled",
            "encoding": {
                "x": "*",
                "y": "*",
                "z": null
            },
            "width": "*",
            "height": "*",
            "depth": "*"
        },
        {
            "name": "scaled",
            "access": false,
            "encoding": {
                "x": "*",
                "y": "*",
                "z": null
            },
            "width": "other.width * 2",
            "height": "other.height * 2"
        }
    ],

    "signals": [{
            "name": "headVisDistance",
            "source": "head",
            "target": "vis",
            "value": "closestdistance"
        }, {
            "name": "isFarFromVis",
            "expression": "headVisDistance > 4"
        }
    ],

    "transitions": [
        {
            "name": "scaling",
            "states": ["unscaled", "scaled"],
            "triggers": ["isFarFromVis"],
            "timing": {
                "control": 0.5,
                "elapsed": "end"
            },
            "interrupt": {
                "control": "ignore"
            },
            "bidirectional": true
        }
    ]
}