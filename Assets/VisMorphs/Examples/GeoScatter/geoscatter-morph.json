{
    "states": [
        {
            "name": "scatterplot",
            "mark": "geoshape",
            "encoding": {
                "x": {
                    "field": "Population",
                    "type": "quantitative"
                },
                "y": {
                    "field": "LifeExpectancy",
                    "type": "quantitative",
                    "scale": {
                        "type": "linear",
                        "domain": [ 70, 85 ]
                    }
                },
                "width": {
                    "value": 10
                },
                "height": {
                    "value": 10
                }
            }
        },
        {
            "name": "choropleth",
            "mark": "geoshape",
            "encoding": {
                "x": {
                    "field": "Longitude",
                    "type": "spatial"
                },
                "y": {
                    "field": "Latitude",
                    "type": "spatial",
                    "scale": {
                        "type": "linear",
                        "domain": [ 15, 75 ]
                    }
                },
                "width": {
                    "field": "Longitude",
                    "type": "spatial"
                },
                "height": {
                    "field": "Latitude",
                    "type": "spatial"
                }
            }
        }
    ],

    "signals": [{
            "name": "sliderX",
            "source": {
                "type": "gameobject",
                "ref": "GeoScatterSliderHandle",
                "select": "transform.localPosition.x"
            }
        }, {
            "name": "geoscatterSlider",
            "expression": "normalise(sliderX, 0, 1)"
        }
    ],

    "transitions": [
        {
            "name": "stage1",
            "states": ["scatterplot", "choropleth"],
            "triggers": [],
            "timing": {
                "control": "geoscatterSlider",
                "easing": "inoutcubic"
            },
            "staging": {
                "x": [0, 0.5],
                "y": [0, 0.5],
                "width": [0.5, 1],
                "height": [0.5, 1]
            },
            "interrupt": {
                "control": "reset",
                "value": "start"
            },
            "bidirectional": true
        }
    ]
}