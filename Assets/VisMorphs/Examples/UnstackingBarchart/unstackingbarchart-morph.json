{
    "states": [
        {
            "name": "stacked",
            "mark": "cube",
            "encoding": {
                "x": {
                    "field": "Survived",
                    "type": "nominal"
                },
                "y": {
                    "type": "quantitative"
                },
                "height": {
                    "type": "quantitative"
                },
                "yoffset": {
                    "channel": "color"
                },
                "yoffsetpct": {
                    "value": -0.5
                },
                "depth": {
                    "value": 10
                },
                "zoffset": null,
                "color": {
                    "type": "nominal"
                }
            }
        },
        {
            "name": "side by side",
            "mark": "cube",
            "encoding": {
                "x": {
                    "type": "nominal"
                },
                "y": {
                    "type": "quantitative"
                },
                "height": {
                    "type": "quantitative"
                },
                "yoffset": null,
                "yoffsetpct": {
                    "value": -0.5
                },
                "depth": {
                    "value": 130
                },
                "color": {
                    "type": "nominal"
                },
                "zoffset": {
                    "channel": "color"
                },
                "zoffsetpct": {
                    "value": -3.5
                }
            }
        }
    ],

    "signals": [
        {
            "name": "isVisTouchingSurface",
            "source": "vis",
            "target": "surface",
            "criteria": "touch",
            "value": "boolean"
        }, {
            "name": "isRightHandPinching",
            "source": "hand",
            "handedness": "right",
            "value": "pinch"
        }, {
            "name": "rightHandSurfaceDistance",
            "source": "hand",
            "handedness": "right",
            "target": "surface",
            "criteria": "closest",
            "value": "closestdistance"
        }, {
            "name": "tweener",
            "expression":"normalise(rightHandSurfaceDistance, 0.05, 0.35, 0, 1)"
        }
    ],

    "transitions": [
        {
            "name": "unstacking",
            "states": ["stacked", "side by side"],
            "triggers": ["isVisTouchingSurface", "isRightHandPinching"],
            "timing": {
                "control": "tweener",
                "easing": "easeinoutcirc"
            },
            "staging": {
                "z": [0, 0.5],
                "depth": [0, 0.5],
                "y": [0.5, 1],
                "height": [0.5, 1]
            },
            "interrupt": {
                "control": "reset",
                "value": "start"
            },
            "bidirectional": true
        }
    ]
}
