{
    "states": [
        {
            "name": "stacked",
            "mark": "cube",
            "encoding": {
                "x": {
                    "field": "Survived",
                    "type": "nominal"
                },
                "y": {
                    "type": "quantitative"
                },
                "height": {
                    "type": "quantitative"
                },
                "yoffset": {
                    "channel": "color"
                },
                "yoffsetpct": {
                    "value": -0.5
                },
                "depth": {
                    "value": 10
                },
                "zoffset": null,
                "color": {
                    "type": "nominal"
                }
            }
        },
        {
            "name": "side by side",
            "mark": "cube",
            "encoding": {
                "x": {
                    "type": "nominal"
                },
                "y": {
                    "type": "quantitative"
                },
                "height": {
                    "type": "quantitative"
                },
                "yoffset": null,
                "yoffsetpct": {
                    "value": -0.5
                },
                "depth": {
                    "value": 130
                },
                "color": {
                    "type": "nominal"
                },
                "zoffset": {
                    "channel": "color"
                },
                "zoffsetpct": {
                    "value": -3.5
                }
            }
        }
    ],

    "signals": [{
            "name": "surfaceCollider",
            "source": {
                "type": "vis",
                "ref": "surface",
                "select": "closestcollider"
            }
        }, {
            "name": "rightHandPos",
            "source": {
                "type": "hands",
                "ref": "right",
                "select": "position"
            }
        }, {
            "name": "rightHandPinch",
            "source": {
                "type": "hands",
                "ref": "right",
                "select": "pinch"
            }
        }, {
            "name": "isOnSurface",
            "source": {
                "type": "vis",
                "ref": "surface",
                "select": "intersecting"
            }
        }, {
            "name": "pinching",
            "expression": "rightHandPinch > 0.5 "
        }, {
            "name": "extrudeDistance",
            "expression": "distance(rightHandPos, closestpoint(surfaceCollider, rightHandPos))"
        }, {
            "name": "tweener",
            "expression":"normalise(extrudeDistance, 0.05, 0.35, 0, 1)"
        }
    ],

    "transitions": [
        {
            "name": "unstacking",
            "states": ["stacked", "side by side"],
            "triggers": ["isOnSurface", "pinching"],
            "timing": {
                "control": "tweener",
                "easing": "easeoutbounce"
            },
            "staging": {
                "z": [0, 0.5],
                "depth": [0, 0.5],
                "y": [0.5, 1],
                "height": [0.5, 1]
            },
            "interrupt": {
                "control": "reset",
                "value": "start"
            },
            "bidirectional": true
        }
    ]
}