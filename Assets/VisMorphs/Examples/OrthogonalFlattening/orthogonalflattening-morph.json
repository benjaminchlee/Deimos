
{
    "states": [
        {
            "name": "unflattened",
            "mark": "sphere",
            "width": 500,
            "depth": 500,
            "encoding": {
                "x": "*",
                "y": "*",
                "z": "*"
            }
        },
        {
            "name": "flattenedX",
            "restrict": true,
            "mark": "sphere",
            "width": "other.width * 0.02",
            "depth": 500,
            "encoding": {
                "x": "*",
                "y": "*",
                "z": "*"
            }
        },
        {
            "name": "flattenedZ",
            "restrict": true,
            "mark": "sphere",
            "width": 500,
            "depth": "other.depth * 0.02",
            "encoding": {
                "x": "*",
                "y": "*",
                "z": "*"
            }
        }
    ],

    "signals": [
        {
            "name": "headVisDistance",
            "source": "head",
            "target": "vis",
            "value": "closestdistance"
        }, {
            "name": "headVisAngle",
            "source": "head",
            "target": "vis",
            "value": "angle"
        }, {
            "name": "isCloseToVis",
            "expression": "headVisDistance < 1"
        }, {
            "name": "isLookingFront",
            "expression": "headVisAngle < 20 || 160 < headVisAngle"
        }, {
            "name": "isLookingSide",
            "expression": "70 < headVisAngle && headVisAngle < 110"
        }
    ],

    "transitions": [
        {
            "name": "flatteningX",
            "states": ["unflattened", "flattenedX"],
            "triggers": ["isLookingSide", "isCloseToVis"],
            "timing": {
                "control": 1,
                "elapsed": "end"
            },
            "interrupt": {
                "control": "ignore"
            },
            "bidirectional": true
        },
        {
            "name": "flatteningZ",
            "states": ["unflattened", "flattenedZ"],
            "triggers": ["isLookingFront", "isCloseToVis"],
            "timing": {
                "control": 1,
                "easing": "easeoutcirc",
                "elapsed": "end"
            },
            "interrupt": {
                "control": "ignore"
            },
            "bidirectional": true
        }
    ]
}