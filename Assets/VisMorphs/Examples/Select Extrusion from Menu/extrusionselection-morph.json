{
    "$schema": "https://raw.githubusercontent.com/benjaminchlee/DxR/master/Assets/VisMorphs/Schema/morph-schema.json",
    "name": "Select Extrusion from Menu",

    "states": [
        {
            "name": "unextruded",
            "encoding": {
                "x": {
                    "field": "Acceleration",
                    "type": "quantitative"
                },
                "y": {
                    "field": "Weight_in_lbs",
                    "type": "quantitative"
                },
                "z": null
            }
        },
        {
            "name": "extruded",
            "restrict": true,
            "depth": -500,
            "encoding": {
                "x": {
                    "field": "Acceleration",
                    "type": "quantitative"
                },
                "y": {
                    "field": "Weight_in_lbs",
                    "type": "quantitative"
                },
                "z": {
                    "field": "selectedExtrusionDimension",
                    "type": "quantitative"
                }
            }
        }
    ],

    "signals": [{
            "name": "selectedExtrusionDimension",
            "source": "ui",
            "target": "ExtrusionMenu"
        }, {
            "name": "extrusionActivationToggle",
            "source": "ui",
            "target": "ExtrusionToggle"
        }
    ],

    "transitions": [
        {
            "name": "extrusion",
            "states": ["unextruded", "extruded"],
            "trigger": "extrusionActivationToggle",
            "control": {
                "timing": 0.25,
                "interrupted": "ignore"
            },
            "bidirectional": true
        }
    ]
}