
{
    "$schema": "https://raw.githubusercontent.com/benjaminchlee/DxR/master/Assets/VisMorphs/Schema/morph-schema.json",
    "name": "Orthogonal Flattening when Close",

    "states": [
        {
            "name": "unflattened",
            "mark": "sphere",
            "width": ">= 600",
            "depth": ">= 600",
            "encoding": {
                "x": "*",
                "y": "*",
                "z": "*"
            }
        },
        {
            "name": "flattenedX",
            "restrict": true,
            "mark": "sphere",
            "width": "other.width * 0.02",
            "depth": "other.depth",
            "encoding": {
                "x": "*",
                "y": "*",
                "z": "*"
            }
        },
        {
            "name": "flattenedZ",
            "restrict": true,
            "mark": "sphere",
            "width": "other.width",
            "depth": "other.depth * 0.02",
            "encoding": {
                "x": "*",
                "y": "*",
                "z": "*"
            }
        }
    ],

    "signals": [
        {
            "name": "headVisDistance",
            "source": "head",
            "target": "vis",
            "value": "closestdistance"
        }, {
            "name": "headVisAngle",
            "source": "head",
            "target": "vis",
            "value": "angle"
        }, {
            "name": "isCloseToVis",
            "expression": "headVisDistance < 1"
        }, {
            "name": "isLookingFront",
            "expression": "headVisAngle < 20 || 160 < headVisAngle"
        }, {
            "name": "isLookingSide",
            "expression": "70 < headVisAngle && headVisAngle < 110"
        }
    ],

    "transitions": [
        {
            "name": "flatteningX",
            "states": ["unflattened", "flattenedX"],
            "trigger": "isLookingSide && isCloseToVis",
            "control": {
                "timing": 1,
                "easing": "easeoutcirc",
                "interrupted": "ignore"
            },
            "bidirectional": true
        },
        {
            "name": "flatteningZ",
            "states": ["unflattened", "flattenedZ"],
            "trigger": "isLookingFront && isCloseToVis",
            "control": {
                "timing": 1,
                "easing": "easeoutcirc",
                "interrupted": "ignore"
            },
            "bidirectional": true
        }
    ]
}