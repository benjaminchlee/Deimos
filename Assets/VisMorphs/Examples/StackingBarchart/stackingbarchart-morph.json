{
    "states": [
        {
            "name": "3d barchart",
            "encoding": {
                "x": {
                    "field": "other.encoding.color.field",
                    "type": "other.encoding.color.type"
                },
                "width": {
                    "value": 130
                },
                "y": {
                    "type": "quantitative"
                },
                "height": {
                    "type": "quantitative"
                },
                "yoffsetpct": {
                    "value": -0.5
                },
                "z": {
                    "type": "nominal"
                }
            }
        },
        {
            "name": "stacked 2d barchart",
            "encoding": {
                "x": null,
                "width": {
                    "value": 10
                },
                "y": {
                    "type": "quantitative"
                },
                "height": {
                    "type": "quantitative"
                },
                "yoffsetpct": {
                    "value": -0.5
                },
                "z": {
                    "type": "nominal"
                },
                "color": {
                    "field": "other.encoding.x.field",
                    "type": "other.encoding.x.type"
                },
                "yoffset": {
                    "channel": "color"
                }
            },
            "position": {
                "value": "touchedSurfaceIntersectionPoint"
            },
            "rotation": {
                "value": "touchedSurfaceRotationRotated"
            }
        }
    ],

    "signals": [
        {
            "name": "isVisTouchingSurface",
            "source": "vis",
            "target": "Surface",
            "criteria": "touch",
            "value": "boolean"
        }, {
            "name": "touchedSurfaceIntersectionPoint",
            "source": "vis",
            "target": "Surface",
            "criteria": "touch",
            "value": "intersection"
        }, {
            "name": "touchedSurfaceRotation",
            "source": "vis",
            "target": "Surface",
            "criteria": "touch",
            "value": "rotation"
        }, {
            "name": "touchedSurfaceIntersectionAngle",
            "source": "vis",
            "target": "Surface",
            "criteria": "touch",
            "value": "angle"
        }, {
            "name": "isTouchingSideways",
            "expression": "60 < touchedSurfaceIntersectionAngle && touchedSurfaceIntersectionAngle < 120"
        }, {
            "name": "touchedSurfaceRotationRotated",
            "expression": "touchedSurfaceRotation * euler(0, 90, 0)"
        }
    ],

    "transitions": [
        {
            "name": "stacking",
            "states": ["3d barchart", "stacked 2d barchart"],
            "triggers": ["isVisTouchingSurface", "isTouchingSideways"],
            "timing": {
                "control": 0.75,
                "easing": "easeoutcirc"
            },
            "interrupt": {
                "control": "ignore"
            },
            "bidirectional": true,
            "priority": 1
        }
    ]
}