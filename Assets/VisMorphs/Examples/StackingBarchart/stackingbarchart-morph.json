{
    "states": [
        {
            "name": "3d barchart",
            "encoding": {
                "x": {
                    "field": "other.encoding.color.field",
                    "type": "other.encoding.color.type"
                },
                "width": {
                    "value": 130
                },
                "y": {
                    "type": "quantitative"
                },
                "height": {
                    "type": "quantitative"
                },
                "yoffsetpct": {
                    "value": -0.5
                },
                "z": {
                    "type": "nominal"
                }
            }
        },
        {
            "name": "stacked 2d barchart",
            "encoding": {
                "x": null,
                "width": {
                    "value": 10
                },
                "y": {
                    "type": "quantitative"
                },
                "height": {
                    "type": "quantitative"
                },
                "yoffsetpct": {
                    "value": -0.5
                },
                "z": {
                    "type": "nominal"
                },
                "color": {
                    "field": "other.encoding.x.field",
                    "type": "other.encoding.x.type"
                },
                "yoffset": {
                    "channel": "color"
                }
            },
            "position": {
                "value": "collisionPoint"
            },
            "rotation": {
                "value": "surfaceRotationSideways"
            }
        }
    ],

    "signals": [{
            "name": "intersectingSurface",
            "source": {
                "type": "vis",
                "ref": "surface",
                "select": "intersecting"
            }
        }, {
            "name": "collisionPoint",
            "source": {
                "type": "vis",
                "ref": "surface",
                "select": "collisionpoint"
            }
        },{
            "name": "surfaceNormal",
            "source": {
                "type": "vis",
                "ref": "surface",
                "select": "transform.forward"
            }
        }, {
            "name": "surfaceRotation",
            "source": {
                "type": "vis",
                "ref": "surface",
                "select": "transform.rotation"
            }
        }, {
            "name": "visDirection",
            "source": {
                "type": "vis",
                "select": "transform.forward"
            }
        }, {
            "name": "intersectionAngle",
            "expression": "angle(surfaceNormal, visDirection)"
        }, {
            "name": "isIntersectingForwards",
            "expression": "intersectionAngle < 20 || 160 < intersectionAngle"
        }, {
            "name": "isIntersectingSideways",
            "expression": "70 < intersectionAngle && intersectionAngle < 110"
        }, {
            "name": "surfaceRotationSideways",
            "expression": "surfaceRotation * euler(0, 90, 0)"
        }
    ],

    "transitions": [
        {
            "name": "stacking",
            "states": ["3d barchart", "stacked 2d barchart"],
            "triggers": ["intersectingSurface", "isIntersectingSideways"],
            "timing": {
                "control": 0.5,
                "elapsed": "end"
            },
            "interrupt": {
                "control": "reset",
                "value": "start"
            },
            "bidirectional": true,
            "priority": 1
        }
    ]
}