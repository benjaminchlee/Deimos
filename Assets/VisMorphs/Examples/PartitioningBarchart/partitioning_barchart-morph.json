
{
    "signals": [{
            "name": "intersectingSurface",
            "source": {
                "type": "vis",
                "ref": "surface",
                "select": "intersecting"
            }
        }, {
            "name": "collisionPoint",
            "source": {
                "type": "vis",
                "ref": "surface",
                "select": "collisionpoint"
            }
        }, {
            "name": "notIntersectingSurface",
            "expression": "!intersectingSurface"
        }
    ],

    "states": [
        {
            "name": "stacked",
            "encoding": {
                "x": {
                    "type": "nominal"
                },
                "y": {
                    "type": "quantitative"
                },
                "height": {
                    "type": "quantitative"
                },
                "yoffsetpct": {
                    "value": -0.5
                },
                "z": {
                    "field": "Class",
                    "type": "nominal"
                },
                "depth": {
                    "value": 130
                },
                "color": {
                    "type": "nominal"
                },
                "yoffset": {
                    "channel": "color"
                }
            }
        },
        {
            "name": "faceted",
            "encoding": {
                "x": {
                    "type": "nominal"
                },
                "y": {
                    "type": "quantitative"
                },
                "height": {
                    "type": "quantitative"
                },
                "yoffsetpct": {
                    "value": -0.5
                },
                "z": null,
                "depth": {
                    "value": 10
                },
                "color": {
                    "type": "nominal"
                },
                "yoffset": {
                    "channel": "color"
                },
                "facetwrap": {
                    "field": "Class",
                    "type": "nominal",
                    "directions": ["x", "y"],
                    "spacing": [400, -500],
                    "size": 2
                }
            }
        }
    ],

    "transitions": [
        {
            "name": "stacked2faceted",
            "states": ["stacked", "faceted"],
            "triggers": ["intersectingSurface"],
            "timing": {
                "control": 0.5
            },
            "interrupt": {
                "control": "reset",
                "value": "start"
            },
            "bidirectional": false
        },
        {
            "name": "faceted2stacked",
            "states": ["faceted", "stacked"],
            "triggers": ["notIntersectingSurface"],
            "timing": {
                "control": 0.5
            },
            "interrupt": {
                "control": "reset",
                "value": "end"
            },
            "bidirectional": false
        }
    ]
}