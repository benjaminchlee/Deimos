{
    "$schema": "../../Schema/morph-schema.json",
    "name": "Menu-based Extrusion",

    "states": [
        {
            "name": "unextruded",
            "encoding": {
                "x": {
                    "field": "Miles_per_Gallon",
                    "type": "quantitative"
                },
                "y": {
                    "field": "Weight_in_lbs",
                    "type": "quantitative"
                },
                "z": null
            }
        },
        {
            "name": "extruded",
            "restrict": true,
            "depth": -500,
            "encoding": {
                "x": {
                    "field": "Miles_per_Gallon",
                    "type": "quantitative"
                },
                "y": {
                    "field": "Weight_in_lbs",
                    "type": "quantitative"
                },
                "z": {
                    "field": "selectedExtrusionDimension",
                    "type": "quantitative"
                }
            }
        }
    ],

    "signals": [{
            "name": "selectedExtrusionDimension",
            "source": "togglemenu",
            "target": "ExtrusionMenu"
        }, {
            "name": "extrusionActivationToggle",
            "source": "togglebutton",
            "target": "ExtrusionToggle"
        }
    ],

    "transitions": [
        {
            "name": "extrusion",
            "states": ["unextruded", "extruded"],
            "trigger": "extrusionActivationToggle",
            "control": {
                "timing": 0.25,
                "interrupted": "ignore"
            },
            "bidirectional": true
        }
    ]
}