
{
    "$schema": "../../Schema/morph-schema.json",
    "name": "Auto Size",
    "states": [
        {
            "name": "unscaled",
            "encoding": {
                "x": "*",
                "y": "*",
                "z": null
            },
            "width": "*",
            "height": "*"
        },
        {
            "name": "scaled",
            "restrict": true,
            "encoding": {
                "x": "*",
                "y": "*",
                "z": null
            },
            "width": "other.width * 2",
            "height": "other.height * 2"
        }
    ],

    "signals": [{
            "name": "headVisDistance",
            "source": "head",
            "target": "vis",
            "value": "closestdistance"
        }, {
            "name": "isFarFromVis",
            "expression": "headVisDistance > 4"
        }
    ],

    "transitions": [
        {
            "name": "scaling",
            "states": ["unscaled", "scaled"],
            "trigger": "isFarFromVis",
            "control": {
                "timing": 0.5,
                "interrupted": "ignore"
            },
            "bidirectional": true
        }
    ]
}